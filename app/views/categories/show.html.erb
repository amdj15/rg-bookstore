<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @category.title %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Books in stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.books_in_stock %></td>

        <td><%= link_to 'Show', [book.category, book] %></td>
        <td><%= link_to 'Edit', [:edit, book.category, book] %></td>
        <td><%= link_to 'Destroy', [book.category, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
